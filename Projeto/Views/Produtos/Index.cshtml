
@model IEnumerable<Projeto.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Catálogo de Produtos</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Novo Produto</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Disponível</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                        <td>@item.Valor.ToString("C2")</td>
                        <td>@Html.DisplayFor(modelItem => item.Disponivel)</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-warning btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
